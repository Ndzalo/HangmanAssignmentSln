<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage"
             Title="MAUI Hangman Assignment">
    <VerticalStackLayout>
        <Label Text="Welcome to Hangman" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontAttributes="Bold" FontSize="40"/>
        <Image x:Name="HangmanImage" Margin="40" Source="hang1.png" HorizontalOptions="Center"/>
        <Label FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Margin="40" Text="RIDDLE-I have keys but no locks. What am I?"/>
        <Entry x:Name="GuessEntry" FontSize="30" HorizontalOptions="Center" Margin="40" Placeholder="Enter your next guess"/>
        <Button Text="Guess" Clicked="OnGuessClicked"/>
        <Label x:Name="DisplayedWord" FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Margin="40" Text="_ _ _ _ _"/>


    </VerticalStackLayout>
</ContentPage>